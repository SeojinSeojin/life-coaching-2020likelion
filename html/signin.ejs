        <div class="input-field" style="width: 20rem">
          <input name="age" id="age" type="number" style="font-size: 1.6rem" />
          <label for="age" class="border:#f57f17 1px solid">나이</label>
      </div>
        <select multiple>
        <option value="" disabled>관심 분야 선택</option>
        <option value="1">기초 코딩</option>
        <option value="2">수학</option>
        <option value="3">과학</option>
        <option value="4">언어학</option>
        <option value="5">인공지능</option>
        <option value="6">실무 지식</option>
      </select>
        <label>Subjects Select</label>
        <div class="input-field" style="width: 20rem">
            <input name="email" id="email" type="email" class="validate" style="font-size: 1.6rem" />
            <label for="email" class="border:#f57f17 1px solid">Email</label>
        </div>
        <div class="input-field" style="width: 20rem">
            <input name="password" id="password" type="password" class="validate" style="font-size: 1.6rem" />
            <label for="password">비밀번호</label>
        </div>
        <div class="input-field" style="width: 20rem">
            <input name="password2" id="password2" type="password" class="validate" style="font-size: 1.6rem" />
            <label for="password2">비밀번호 확인</label>
        </div>
        <button type="submit"  class="waves-effect waves-light btn-large amber darker-1" style="width: 20rem; margin-top: 1rem; font-size: 1.5rem">Sign Up</button>
        </form>
    </div>
   
